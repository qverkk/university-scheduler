<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kul.window.MainController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
              <ImageView fitHeight="113.0" fitWidth="365.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../images/logo_kul.jpg" />
                  </image>
              </ImageView>
              <Label alignment="CENTER" text="Welcome to University Scheduler" textFill="#323232">
                  <font>
                      <Font size="18.0" />
                  </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
              </Label>
         </children>
         <HBox.margin>
            <Insets bottom="30.0" left="30.0" top="30.0" />
         </HBox.margin>
      </VBox>
      <Pane fx:id="controlsPane">
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
      </Pane>
   </children>
</HBox>
